<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="@dimen/actionBarSize"
    n1:background="@color/colorPrimary">

    <LinearLayout
        n1:id="@id/activity_title_back"
        n1:layout_width="wrap_content"
        n1:layout_height="fill_parent">

        <ImageView
            n1:layout_width="25.0dip"
            n1:layout_height="25.0dip"
            n1:layout_centerVertical="true"
            n1:layout_gravity="center"
            n1:layout_marginEnd="14.0dip"
            n1:layout_marginStart="14.0dip"
            n1:src="@mipmap/icon_back" />
    </LinearLayout>

    <TextView
        n1:id="@id/activity_title_title"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_centerInParent="true"
        n1:ellipsize="end"
        n1:maxLines="1"
        n1:maxWidth="180.0dip"
        n1:text=" "
        n1:textColor="@color/white"
        n1:textSize="@dimen/text_18dp" />

    <RelativeLayout
        n1:id="@id/activity_title_right"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_alignParentEnd="true"
        n1:layout_centerVertical="true"
        n1:layout_marginEnd="4.0dip"
        n1:padding="10.0dip">

        <TextView
            n1:id="@id/activity_title_right_tv"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_centerInParent="true"
            n1:text=""
            n1:textColor="@color/white"
            n1:textSize="@dimen/text_14dp" />

        <ImageView
            n1:id="@id/activity_title_right_im"
            n1:layout_width="20.0dip"
            n1:layout_height="20.0dip"
            n1:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        n1:id="@id/activity_title_right_2"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_centerVertical="true"
        n1:layout_toStartOf="@id/activity_title_right"
        n1:padding="10.0dip">

        <TextView
            n1:id="@id/activity_title_right_2_tv"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_centerInParent="true"
            n1:text=""
            n1:textColor="@color/white"
            n1:textSize="@dimen/text_14dp" />

        <ImageView
            n1:id="@id/activity_title_right_2_im"
            n1:layout_width="20.0dip"
            n1:layout_height="20.0dip"
            n1:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>